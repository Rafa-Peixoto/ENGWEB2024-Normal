extends layout

block content
  h1.w3-container.w3-teal #{title}

  if contratos && contratos.length > 0
    .w3-responsive
      table.w3-table-all.w3-card-4
        thead
          tr
            th ID Contrato
            th Objecto do Contrato
            th Data de Celebração
            th Preço Contratual
            th NIPC da Entidade Comunicante
            th Entidade Comunicante
        tbody
          each contrato in contratos
            tr.w3-hover-shadow
              td
                a(href='/contrato/' + contrato.idcontrato).w3-text-blue= contrato.idcontrato
              td= contrato.objectoContrato
              td= contrato.dataCelebracaoContrato
              td= contrato.precoContratual
              td
                a(href='/entidade/' + contrato.nipc_entidade_comunicante).w3-text-green= contrato.nipc_entidade_comunicante
              td= contrato.entidade_comunicante
  else
    .w3-container
      p.w3-text-grey Não há contratos disponíveis.
